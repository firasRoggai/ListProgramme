#include <stdio.h>
#include <stdlib.h>
int somme (int n){
 int s=0,i;
 for(i=1;i<=n;i++)
 s=s+i;
 return(s);
 }
float puiss(float x,int n){
int i;
float p=1;
if (n>0)
 {
 for(i=1;i<=n;i++)
 p=p*x;
 return(p);
 }
else {
 for(i=1;i<=(-n);i++)
 p=p*x;
 return(1/p);
 }
}
