    printf("%d",choix);
    switch(choix)
    {
        case 1:
        printf("\nla somme de combien de nombres ? ");
        scanf("%d",&n);
        printf("\nla somme des %d premier nombres est %d ",n,somme(n));
        break;
        case 2:
            printf("donner un nombre puis la puissance: \n");
